.container(ng-controller="LoginCtrl")
    .row
        .col-md-2
            a.btn.btn-primary(href='#/add-game', ng-show="identity.isAuthenticated()") Add Game
        .col-md-2 Search
        .col-md-3
            input.form-control(type="text", placeholder="Search", ng-model="search")
        .col-md-2 Sort
        .col-md-3
            select.form-control(ng-model="sort")
                option(value=" " ng-selected="'true'") Default
                option(value="title") Title
                option(value="released") Released
    br
    table.table
        tr
            th Title
            th Released
        tr(ng-repeat="game in games | filter: search | orderBy: sort")
            td
                a(href="#/games/{{ game._id }}") {{ game.title }}
            td {{ game.released | date }}

